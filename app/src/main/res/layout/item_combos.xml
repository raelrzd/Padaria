<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/item_combo_imagem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/cafe_da_manha" />

        <TextView
            android:id="@+id/favorito_da"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:gravity="top"
            android:text="Favoritos da Semana"
            android:textAppearance="@style/favoritos"
            app:layout_constraintEnd_toEndOf="@+id/item_combo_imagem"
            app:layout_constraintStart_toStartOf="@+id/item_combo_imagem"
            app:layout_constraintTop_toBottomOf="@+id/item_combo_imagem" />

        <TextView
            android:id="@+id/item_combo_nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="top"
            tools:text="Café da Manhã"
            android:textAppearance="@style/produto_combo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/favorito_da"
            app:layout_constraintStart_toStartOf="@+id/favorito_da"
            app:layout_constraintTop_toBottomOf="@+id/favorito_da" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>